APP_PRIVATE_DATA=your_app_private_data_here
JWT_SECRET=your_jwt_secret_here
PORT=5123

# Database (Render Postgres)
DATABASE_URL=postgresql://user:password@host:5432/github-bot
DATABASE_SSL=true
DATABASE_POOL_SIZE=5
DATABASE_CA_CERT_PATH=
DEV_DISABLE_SSL_VALIDATION=false

# GitHub Personal Access Token (for API requests and legacy polling)
GITHUB_TOKEN=your_github_personal_access_token

# GitHub App Configuration (optional - enables real-time webhooks)
# Leave these empty to run in polling-only mode
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_BASE64=
GITHUB_APP_CLIENT_ID=
GITHUB_APP_CLIENT_SECRET=
GITHUB_APP_SLUG=towns-github-bot
GITHUB_WEBHOOK_SECRET=

# Public URL for webhooks and OAuth callbacks
PUBLIC_URL=https://your-bot.onrender.com

# Optional: Custom OAuth redirect URL (defaults to PUBLIC_URL/oauth/callback)
OAUTH_REDIRECT_URL=

# Optional: Custom migrations path (defaults to ./drizzle)
DRIZZLE_MIGRATIONS_PATH=
